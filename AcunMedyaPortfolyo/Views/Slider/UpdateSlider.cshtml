@model AcunMedyaPortfolyo.Models.Slider
@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Update Slider</h2>

<form method="post">
    @Html.HiddenFor(x => x.SliderID)
    <label>Name Surname</label>
    <br />
    @Html.TextBoxFor(x => x.NameSurname)
    <br />
    <label>Description</label>
    <br />
    @Html.TextBoxFor(x => x.Description)
    <br />
    <label>Image</label>
    <br />
    @Html.TextBoxFor(x => x.ImageURL)
    <br />
    <button class="btn btn-success">Update</button>
</form>