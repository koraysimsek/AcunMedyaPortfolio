@model List<AcunMedyaPortfolyo.Models.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Slider</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SliderID</th>
                <th>Name Surname</th>
                <th>Description</th>
                <th>Image</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SliderID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageURL" style="width:50px" /></td>
                    <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-success">Update</a></td>
                    <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Slider/CreateSlider/" class="btn btn-success">Create Slider</a>
</div>