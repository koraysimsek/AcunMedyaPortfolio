@model List<AcunMedyaPortfolyo.Models.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Contact</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ContactID</th>
                <th>Description</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ContactID</td>
                    <td>@item.Description</td>
                    <td>@item.Address</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Update</a></td>
                    <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Contact/CreateContact/" class="btn btn-success">Create Contact</a>
</div>