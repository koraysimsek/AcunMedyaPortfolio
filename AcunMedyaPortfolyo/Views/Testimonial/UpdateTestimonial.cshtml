@model AcunMedyaPortfolyo.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateTestimonial</h2>

<form method="post">
    @Html.HiddenFor(x => x.TestimonialID)
    <label>Referans Açıklaması</label>
    <br />
    @Html.TextBoxFor(x => x.Description1)
    <br />
    <label>Referans Adı</label>
    <br />
    @Html.TextBoxFor(x => x.TestimonialName)
    <br />
    <label>Sayfa Açıklaması</label>
    <br />
    @Html.TextBoxFor(x => x.Description2)
    <br />
    <label>Fotoğraf</label>
    <br />
    @Html.TextBoxFor(x => x.ImageURL)
    <br />
    <label>Ünvan</label>
    <br />
    @Html.TextBoxFor(x => x.Title)
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>