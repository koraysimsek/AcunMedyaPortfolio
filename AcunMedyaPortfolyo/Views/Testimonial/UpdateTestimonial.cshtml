@model AcunMedyaPortfolyo.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Update Testimonial</h2>

<form method="post">
    @Html.HiddenFor(x => x.TestimonialID)
    <label>Testimonial Description</label>
    <br />
    @Html.TextBoxFor(x => x.Description1)
    <br />
    <label>Testimonial Name</label>
    <br />
    @Html.TextBoxFor(x => x.TestimonialName)
    <br />
    <label>Page Description</label>
    <br />
    @Html.TextBoxFor(x => x.Description2)
    <br />
    <label>Image</label>
    <br />
    @Html.TextBoxFor(x => x.ImageURL)
    <br />
    <label>Title</label>
    <br />
    @Html.TextBoxFor(x => x.Title)
    <br />
    <button class="btn btn-success">Update</button>
</form>