@model List<AcunMedyaPortfolyo.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Project</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ProjectID</th>
                <th>Project Name</th>
                <th>Desctiption</th>
                <th>Project Link</th>
                <th>Image1</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>CategoryID</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProjectID</td>
                    <td>@item.ProjectName</td>
                    <td>@item.Description</td>
                    <td>@item.ProjectLink</td>
                    <td><img src="@item.Image1" style="width:50px" /></td>
                    <td><img src="@item.Image2" style="width:50px" /></td>
                    <td><img src="@item.Image3" style="width:50px" /></td>
                    <td>@item.Category.CategoryName</td>
                    <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Update</a></td>
                    <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Project/CreateProject/" class="btn btn-success">Create Project</a>
</div>