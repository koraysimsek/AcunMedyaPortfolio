@model List<AcunMedyaPortfolyo.Models.Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Services</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ServicesID</th>
                <th>Açıklama</th>
                <th>Başlık</th>
                <th>İkon Linki</th>
                <th>Açıklama2</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td><img src="@item.IconURL" /></td>
                    <td>@item.Description2</td>
                    <td><a href="/Service/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Service/DeleteServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Service/CreateServices/" class="btn btn-success">Oluştur</a>
</div>