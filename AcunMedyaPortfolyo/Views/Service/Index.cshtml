@model List<AcunMedyaPortfolyo.Models.Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Service</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ServicesID</th>
                <th>Description</th>
                <th>Title</th>
                <th>İcon Link</th>
                <th>Description2</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td><img src="@item.IconURL" /></td>
                    <td>@item.Description2</td>
                    <td><a href="/Service/UpdateServices/@item.ServicesID" class="btn btn-success">Update</a></td>
                    <td><a href="/Service/DeleteServices/@item.ServicesID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Service/CreateServices/" class="btn btn-success">Create Service</a>
</div>