@model List<AcunMedyaPortfolyo.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>About</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>AboutID</th>
                <th>Image</th>
                <th>Title</th>
                <th>Birthday</th>
                <th>Website</th>
                <th>Phone</th>
                <th>City</th>
                <th>Age</th>
                <th>Email</th>
                <th>Freelance</th>
                <th>Description1</th>
                <th>Description2</th>
                <th>Degree</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AboutID</td>
                    <td><img src="@item.ImageURL" style="width:50px" /></td>
                    <td>@item.Title</td>
                    <td>@item.Birthday</td>
                    <td>@item.WebSite</td>
                    <td>@item.Phone</td>
                    <td>@item.City</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Freelance</td>
                    <td>@item.Description1</td>
                    <td>@item.Description2</td>
                    <td>@item.Degree</td>
                    <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-success">Update</a></td>
                    <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/About/CreateAbout/" class="btn btn-success">Create About</a>
</div>