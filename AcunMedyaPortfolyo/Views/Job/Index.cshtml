@model List<AcunMedyaPortfolyo.Models.Job>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Job</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>JobID</th>
                <th>Başlık</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Şirket Adı</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.JobID</td>
                    <td>@item.Title</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Description</td>
                    <td><a href="/Job/UpdateJob/@item.JobID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Job/DeleteJob/@item.JobID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Job/CreateJob/" class="btn btn-success">Oluştur</a>
</div>