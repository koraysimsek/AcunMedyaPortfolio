@model List<AcunMedyaPortfolyo.Models.Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Message</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>MessageID</th>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Konu</th>
                <th>Mesaj İçeriği</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MessageID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.MessageContent</td>
                    <td><a href="/Message/UpdateMessage/@item.MessageID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Message/CreateMessage/" class="btn btn-success">Oluştur</a>
</div>