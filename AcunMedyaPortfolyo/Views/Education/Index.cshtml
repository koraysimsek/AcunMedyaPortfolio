@model List<AcunMedyaPortfolyo.Models.Education>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Education</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>EducationID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Name</th>
                <th>Description</th>
                <th>Section</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EducationID</td>
                    <td>@item.StartYear</td>
                    <td>@item.EndYear</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Section</td>
                    <td><a href="/Education/UpdateEducation/@item.EducationID" class="btn btn-success">Update</a></td>
                    <td><a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Education/CreateEducation/" class="btn btn-success">Create Education</a>
</div>